{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "api/**/*.mjs", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.js": { "runtime": "nodejs18.x" },
    "api/**/*.mjs": { "runtime": "nodejs18.x" }
  }
}
