{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/**/*.ts",  "use": "@vercel/node" },
    { "src": "api/**/*.js",  "use": "@vercel/node" },
    { "src": "api/**/*.mjs", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ]
}
